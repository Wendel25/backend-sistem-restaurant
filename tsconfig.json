{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "typeRoots": [
      "./src/@types"
    ],
    //"types": ["jest", "node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  }
}
